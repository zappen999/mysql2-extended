{
	"compilerOptions": {
		"noEmit": true,
		"incremental": true,
		"esModuleInterop": true,
		"module": "commonjs",
		"declaration": true,
		"outDir": "./dist",
		"target": "es5",
		"lib": ["es6"],
		"importsNotUsedAsValues": "error",
		"noUncheckedIndexedAccess": true,
		"strict": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"noImplicitAny": true,
		"typeRoots": [
			"./node_modules/@types"
		]
	},
	"include": [
		"./src/"
	]
}
